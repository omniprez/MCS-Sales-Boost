{
  "version": 2,
  "builds": [
    {
      "src": "MCS-Sales-Boost/server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "MCS-Sales-Boost/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "MCS-Sales-Boost/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "MCS-Sales-Boost/client/dist/$1"
    }
  ]
} 