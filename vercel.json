{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/dashboard/(.*)",
      "dest": "/api/dashboard/index.js"
    },
    {
      "src": "/api/dashboard.*",
      "dest": "/api/dashboard-api.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
} 