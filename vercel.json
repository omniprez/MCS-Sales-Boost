{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/dashboard/(.*)",
      "dest": "/api/dashboard-api.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth-api.js"
    },
    {
      "src": "/api/deals/(.*)",
      "dest": "/api/deals-api.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
} 