{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/dashboard",
      "dest": "/api/dashboard-api.js"
    },
    {
      "src": "/api/dashboard/(.*)",
      "dest": "/api/dashboard-api.js"
    },
    {
      "src": "/api/deals",
      "dest": "/api/deals-api.js"
    },
    {
      "src": "/api/deals/(.*)",
      "dest": "/api/deals-api.js"
    },
    {
      "src": "/api/auth",
      "dest": "/api/auth-api.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth-api.js"
    },
    {
      "src": "/api",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
} 